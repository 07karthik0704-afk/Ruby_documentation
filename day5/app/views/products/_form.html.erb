<%= form_with(model: product, class: "premium-form") do |form| %>
  <% if product.errors.any? %>
    <div class="alert-danger">
      <h3><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h3>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <div class="form-group">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-input", placeholder: "Enter product name" %>
    </div>

    <div class="form-group">
      <%= form.label :price, class: "form-label" %>
      <%= form.text_field :price, class: "form-input", placeholder: "Eg: 250.00" %>
    </div>

    <div class="form-group full-width">
      <%= form.label :description, class: "form-label" %>
      <%= form.textarea :description, class: "form-input form-textarea", placeholder: "Enter product description" %>
    </div>

    <div class="form-group">
      <%= form.label :stock, class: "form-label" %>
      <%= form.number_field :stock, class: "form-input", placeholder: "Eg: 15" %>
    </div>

    <div class="form-group checkbox-group">
      <%= form.label :is_active, class: "form-label" %>
      <div class="checkbox-wrap">
        <%= form.check_box :is_active, class: "form-checkbox" %>
        <span class="checkbox-text">Active</span>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit(product.new_record? ? "Create Product" : "Update Product", class: "btn btn-purple") %>
    <%= link_to "Cancel", products_path, class: "btn btn-danger-soft" %>
  </div>
<% end %>
