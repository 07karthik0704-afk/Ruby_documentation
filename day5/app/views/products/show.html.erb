<% content_for :title, "Product Details" %>

<div class="page-wrapper">
  <% if notice.present? %>
    <div class="alert-success"><%= notice %></div>
  <% end %>

  <div class="page-header header-fix">
    <h1 class="page-title">Product Details</h1>

    <%= link_to "â¬… Back", products_path, class: "btn btn-purple btn-back" %>
  </div>

  <div class="form-center">
    <div class="glass-card details-glass">
      <div class="details-title">
        <span class="dot dot-gold"></span>
        <h2><%= @product.name %></h2>
      </div>

      <div class="details-grid">
        <div class="detail-row">
          <span class="detail-label">Description</span>
          <span class="detail-value"><%= @product.description %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Price</span>
          <span class="detail-value price">â‚¹ <%= @product.price %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Stock</span>
          <span class="detail-value">
            <% if @product.stock.to_i <= 0 %>
              <span class="pill pill-danger">Out</span>
            <% else %>
              <span class="pill pill-purple"><%= @product.stock %></span>
            <% end %>
          </span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Status</span>
          <span class="detail-value">
            <% if @product.is_active %>
              <span class="status-chip status-green">
                <span class="dot dot-green"></span> Active
              </span>
            <% else %>
              <span class="status-chip status-red">
                <span class="dot dot-red"></span> Inactive
              </span>
            <% end %>
          </span>
        </div>
      </div>

      <div class="detail-actions">
        <%= link_to "âœ Edit", edit_product_path(@product), class: "btn btn-purple" %>

        <%= button_to "ðŸ—‘ Delete",
              @product,
              method: :delete,
              data: { confirm: "Are you sure you want to delete this product?" },
              class: "btn btn-danger-soft",
              form: { class: "delete-form" } %>
      </div>
    </div>
  </div>
</div>
