<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<div class="header">
<h1>Products</h1>
<h2><%= link_to "New product", new_product_path,class:"buttomStyle" %></h2>
</div>



<% @products.each do |product| %>
  <div class="one">
        <h3>Name  : <%= product.name %></h3>
        <h3>Description : <%= product.description %></h3>
        <h3>Price  : <%= product.price %></h3>
        <h3>Stock  : <%= product.stock %></h3>
        <h3>Is Active : <span style="color: <%= product.is_active ? 'limegreen' : 'red' %>;">
        <%= product.is_active %>
        </span></h3>
        <h2><%= link_to "view", product , class: "buttomStyle" %></h2>
        </div>

<% end %>