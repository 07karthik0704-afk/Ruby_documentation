<% content_for :title, "Customer Details" %>

<div class="page-wrapper">
  <% if notice.present? %>
    <div class="alert-success"><%= notice %></div>
  <% end %>

  <div class="page-header">
    <h1 class="page-title">Customer Details</h1>

    <%= link_to "â¬… Back", customers_path, class: "btn btn-secondary" %>
  </div>

  <div class="card details-card">
    <div class="detail-row">
      <span class="detail-label">Name</span>
      <span class="detail-value"><%= @customer.name %></span>
    </div>

    <div class="detail-row">
      <span class="detail-label">Age</span>
      <span class="detail-value"><%= @customer.age %></span>
    </div>

    <div class="detail-actions">
      <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-warning" %>

      <%= button_to "Delete",
            @customer,
            method: :delete,
            data: { confirm: "Are you sure you want to delete this customer?" },
            class: "btn btn-danger",
            form: { class: "delete-form" } %>
    </div>
  </div>
</div>
